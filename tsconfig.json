{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/Provider.jsx", "app/page.jsx", "app/layout.jsx", "components/organisms/RecipeForm.jsx", "components/organisms/Footer.jsx", "components/molecules/Card.jsx", "components/templates/Feed.jsx", "components/templates/Hero.jsx", "components/templates/CTA.jsx", "components/templates/Profile.jsx", "components/templates/index.js", "components/atoms/index.js", "components/organisms/index.js", "components/molecules/RecipeCard.tsx", "app/api/users/[id]/posts/route.js"],
  "exclude": ["node_modules"]
}
